<%= form_for @changeset, @action, [class: "pure-form pure-form-stacked"],  fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :title, "Title", class: "control-label" %>
    <%= text_input f, :title, class: "pure-input-1" %>
  </div>

  <div class="form-group-1-2">
    <%= label f, :permalink, "Permalink", class: "control-label" %>
    <%= text_input f, :permalink, class: "pure-input-1" %>
  </div>

  <div class="form-group-1-2">
    <%= label f, :tags_text, "Tags", class: "control-label" %>
    <%= text_input f, :tags_text, class: "pure-input-1" %>
  </div>

  <div class="form-group">
    <%= label f, :summary, "Summary", class: "control-label" %>
    <%= textarea f, :summary, class: "pure-input-1 summary" %>
  </div>

  <div class="form-group">
    <%= label f, :body, "Body", class: "control-label" %>
    <%= textarea f, :body, class: "pure-input-1 body" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "pure-button" %>
  </div>
<% end %>
